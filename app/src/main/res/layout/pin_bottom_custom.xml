<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="64dp"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeButton"
        style="@style/Theme.TouchTool.IconButton.Outlined"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginVertical="4dp"
        app:icon="@drawable/icon_remove"
        app:iconSize="12dp"
        app:iconTint="?attr/colorOutline" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextBox"
        style="?attr/textInputOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="top"
        android:hint="@string/function_pin_hint"
        android:paddingHorizontal="4dp"
        app:hintTextAppearance="@style/Theme.TouchTool.TextAppearance.Hint"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:textSize="9sp"
            tools:ignore="SmallSp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pinSlot"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        app:strokeWidth="1dp" />

</LinearLayout>