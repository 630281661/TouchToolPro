<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center_vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picker_app_subtitle_include"
            android:textSize="9sp" />

        <LinearLayout
            android:id="@+id/includeAppsIconBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectAppButton"
            style="@style/Theme.TouchTool.IconButton.Filled"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:iconSize="16dp"
            app:icon="@drawable/icon_task" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/excludeAppsBox"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picker_app_subtitle_exclude"
            android:textSize="9sp" />

        <LinearLayout
            android:id="@+id/excludeAppsIconBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="horizontal" />

    </LinearLayout>

</LinearLayout>
