<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:gravity="center_vertical|end">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeButton"
        style="@style/Theme.TouchTool.IconButton.Outlined"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="4dp"
        android:visibility="visible"
        app:icon="@drawable/icon_remove"
        app:iconTint="?attr/colorOutline" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_spinner"
        android:dropDownWidth="wrap_content"
        android:popupBackground="@drawable/shape_spinner_background"
        android:spinnerMode="dropdown" />


    <FrameLayout
        android:id="@+id/pinBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="24dp"
        android:paddingHorizontal="4dp" />

    <LinearLayout
        android:id="@+id/pinSlotBox"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center_vertical|end"
        android:minWidth="12dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="4dp"
            android:hint="@string/function_pin_hint"
            app:hintTextAppearance="@style/Theme.TouchTool.TextAppearance.Hint"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="0dp"
                android:textSize="9sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textSize="9sp"
            android:visibility="gone" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pinSlot"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="12dp"
            android:layout_height="12dp" />

    </LinearLayout>

</LinearLayout>