<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <FrameLayout
        android:id="@+id/pinSlotBox"
        android:layout_width="24dp"
        android:layout_height="24dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pinSlot"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-1dp"
            app:cardBackgroundColor="?attr/colorOutline"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small" />

    </FrameLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/pinBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeButton"
        style="@style/Theme.TouchTool.IconButton.Outlined"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:visibility="visible"
        app:icon="@drawable/icon_remove"
        app:iconTint="?attr/colorOutline" />

</LinearLayout>