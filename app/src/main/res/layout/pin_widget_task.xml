<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center_vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_do_task_action_subtitle_task"
            android:textSize="9sp"
            tools:ignore="SmallSp" />

        <Spinner
            android:id="@+id/taskSpinner"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:background="@drawable/shape_spinner"
            android:dropDownWidth="wrap_content"
            android:popupBackground="@drawable/shape_spinner_background"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/excludeAppsBox"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_do_task_action_subtitle_action"
            android:textSize="9sp"
            tools:ignore="SmallSp" />

        <Spinner
            android:id="@+id/actionSpinner"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:background="@drawable/shape_spinner"
            android:dropDownWidth="wrap_content"
            android:popupBackground="@drawable/shape_spinner_background"
            android:spinnerMode="dropdown" />

    </LinearLayout>

</LinearLayout>
