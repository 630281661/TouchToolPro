<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/widgetButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/icon_widget"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/imageButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/icon_image"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/colorButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/icon_color"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/textButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/icon_text"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/icon_log"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backKeyButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/icon_back"
                app:iconSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/icon_close"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="gone"
                app:icon="@drawable/icon_get_value"
                app:iconSize="24dp" />

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recodeButton"
                    style="@style/Theme.TouchTool.IconButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:checkable="true"
                    app:icon="@drawable/icon_record_start"
                    app:iconSize="24dp"
                    app:iconTint="@color/button_container_error_check" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/countText"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="?attr/colorOnError"
                    android:textSize="11sp"
                    android:translationX="-2.5dp" />

            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleX="-1"
                android:visibility="gone"
                app:icon="@drawable/icon_get_value"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                style="@style/Theme.TouchTool.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:icon="@drawable/icon_menu_save"
                app:iconSize="24dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>